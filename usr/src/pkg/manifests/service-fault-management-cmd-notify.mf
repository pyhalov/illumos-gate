set name=pkg.fmri value=pkg:/service/fault-management/cmd-notify@$(PKGVERS)
set name=pkg.description \
    value="cmd-notify is a small, lightweight daemon that subscribes to both software and FMA problem lifecycle events.  Upon receipt of an event, it executes script, specified in the SMF service configuration repository."
set name=pkg.summary value="Custom Notification Daemon for System Events"
set name=info.classification \
    value="org.opensolaris.category.2008:System/Administration and Configuration"
set name=variant.arch value=$(ARCH)
dir path=lib/svc/manifest/system group=sys
dir path=lib/svc/manifest/system/fm group=sys
dir path=usr/lib
dir path=usr/lib/fm
dir path=usr/lib/fm/notify
file path=lib/svc/manifest/system/fm/cmd-notify.xml group=sys mode=0444
file path=usr/lib/fm/notify/cmd-notify mode=0555
file path=usr/lib/fm/notify/notify-script.sh mode=0755 preserve=true
license cr_Sun license=cr_Sun
license lic_CDDL license=lic_CDDL
